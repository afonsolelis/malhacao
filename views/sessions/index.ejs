<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title">Sessões de Treino</h1>
</div>

<div class="row g-4">
    <% if (sessions.length > 0) { %>
        <% sessions.forEach(session => { %>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-calendar-check text-success me-2"></i><%= session.workoutId.name %></h5>
                        <p class="card-text flex-grow-1"><%= session.workoutId.description %></p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                <%= new Date(session.date).toLocaleDateString() %>
                            </small>
                            <a href="/sessions/<%= session._id %>" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> Detalhes</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">Nenhuma sessão de treino encontrada</h4>
                <p class="text-muted">Complete uma sessão de treino para vê-la aqui</p>
                <a href="/workouts" class="btn btn-primary"><i class="bi bi-list-check me-1"></i> Ver Treinos</a>
            </div>
        </div>
    <% } %>
</div>